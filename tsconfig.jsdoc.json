{
    "compilerOptions": {
        "outDir": "./docs/build",
        "allowJs": true,
        "target": "ESNext",
        "lib": [ "ES2020", "DOM" ],
        "sourceMap": false,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "useDefineForClassFields": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}
